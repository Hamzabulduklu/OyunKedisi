@model OyunKedisi.Models.Yorumlar

@{
    ViewData["Title"] = "Yeni Yorum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1 class="h3">Yeni Yorum Ekle</h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="UserId" class="form-label">Kullanıcı</label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="OyunId" class="form-label">Oyun</label>
                            <select asp-for="OyunId" class="form-select" asp-items="ViewBag.OyunId"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Yorumlar1" class="form-label">Yorum</label>
                    <textarea asp-for="Yorumlar1" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Yorumlar1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
