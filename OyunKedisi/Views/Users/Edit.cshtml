@model OyunKedisi.Models.User

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1 class="h3">Kullanıcı Düzenle</h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="KullaniciAdi" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="KullaniciAdi" class="form-control" />
                            <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Mail" class="form-label">E-posta</label>
                            <input asp-for="Mail" class="form-control" type="email" />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="SifreHash" class="form-label">Şifre</label>
                            <input asp-for="SifreHash" class="form-control" type="password" />
                            <span asp-validation-for="SifreHash" class="text-danger"></span>
                            <small class="form-text text-muted">Şifreyi değiştirmek istemiyorsanız boş bırakın.</small>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Yas" class="form-label">Yaş</label>
                            <input asp-for="Yas" class="form-control" type="number" min="13" max="120" />
                            <span asp-validation-for="Yas" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="YetkiId" class="form-label">Yetki</label>
                    <select asp-for="YetkiId" class="form-select" asp-items="ViewBag.YetkiId">
                        <option value="">Yetki Seçin</option>
                    </select>
                    <span asp-validation-for="YetkiId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
