@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">Admin Paneli</h1>
                <div class="text-muted">
                    <i class="fas fa-user-shield"></i> Yönetici Kontrol Merkezi
                </div>
            </div>
            <hr class="mt-2">
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Kullanıcı Yönetimi</h5>
                    <p class="card-text text-muted">Kullanıcıları görüntüle, düzenle ve yönet.</p>
                    <a href="@Url.Action("Index", "Users")" class="btn btn-primary w-100">
                        <i class="fas fa-users"></i> Kullanıcıları Yönet
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-gamepad fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Oyun Yönetimi</h5>
                    <p class="card-text text-muted">Oyunları görüntüle, düzenle ve yönet.</p>
                    <a href="@Url.Action("Index", "Oyunlars")" class="btn btn-success w-100">
                        <i class="fas fa-gamepad"></i> Oyunları Yönet
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-comments fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title">Yorum Yönetimi</h5>
                    <p class="card-text text-muted">Yorumları görüntüle ve yönet.</p>
                    <a href="@Url.Action("Index", "Yorumlars")" class="btn btn-info w-100 text-white">
                        <i class="fas fa-comments"></i> Yorumları Yönet
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-star fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">Favori Yönetimi</h5>
                    <p class="card-text text-muted">Favorileri görüntüle ve yönet.</p>
                    <a href="@Url.Action("Index", "Favoris")" class="btn btn-warning w-100 text-white">
                        <i class="fas fa-star"></i> Favorileri Yönet
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Hızlı İstatistikler</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-users fa-2x text-primary"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-0">Toplam Kullanıcı</h6>
                                    <h4 class="mb-0">@ViewBag.TotalUsers</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-gamepad fa-2x text-success"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-0">Toplam Oyun</h6>
                                    <h4 class="mb-0">@ViewBag.TotalGames</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-comments fa-2x text-info"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-0">Toplam Yorum</h6>
                                    <h4 class="mb-0">@ViewBag.TotalComments</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-star fa-2x text-warning"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-0">Toplam Favori</h6>
                                    <h4 class="mb-0">@ViewBag.TotalFavorites</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // İstatistikleri güncellemek için AJAX çağrısı yapılabilir
        $(document).ready(function() {
            // Her 30 saniyede bir istatistikleri güncelle
            setInterval(function() {
                $.get('/Home/GetAdminStats', function(data) {
                    // İstatistikleri güncelle
                });
            }, 30000);
        });
    </script>
} 