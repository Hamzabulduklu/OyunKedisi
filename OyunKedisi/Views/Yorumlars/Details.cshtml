@model OyunKedisi.Models.Yorumlar

@{
    ViewData["Title"] = "Yorum Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1 class="h3">Yorum Detayı</h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-2 text-center mb-4">
                    <img src="https://ui-avatars.com/api/?name=@Model.User?.KullaniciAdi&size=100" class="img-fluid rounded-circle" alt="@Model.User?.KullaniciAdi">
                    <h5 class="mt-2">@Model.User?.KullaniciAdi</h5>
                </div>
                <div class="col-md-10">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Yorum</label>
                        <p>@Model.Yorumlar1</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Oyun</label>
                        <p>@Model.Oyun?.OyunAdi</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Kullanıcı</label>
                        <p>@Model.User?.KullaniciAdi</p>
                    </div>
                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Listeye Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
</div>
</div>
